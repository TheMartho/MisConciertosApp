<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:gravity="center"
    android:text="@string/Titulo"
    android:textSize="@dimen/letraTitulo"
    android:textStyle="bold"
    android:textColor="@color/icons"
    android:layout_marginTop="@dimen/marginTopBase"
    android:layout_height="wrap_content">
</TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTopBase"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/letraBase"
            android:textColor="@color/icons"
            android:text="@string/Artista"
            android:layout_height="wrap_content">
        </TextView>

        <EditText
            android:id="@+id/artistaTxt"
            android:layout_width="match_parent"
            android:textSize="@dimen/hintBase"
            android:layout_weight="1"
            android:hint="@string/HintArtista"
            android:textColorHint="@color/colorMorado"
            android:layout_height="wrap_content">
        </EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/marginTopBase"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/icons"
            android:text="@string/Fecha"
            android:textSize="@dimen/letraBase"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/calendarioTxt"
            android:layout_width="match_parent"
            android:hint="@string/hintFecha"
            android:textColorHint="@color/colorMorado"
            android:layout_weight="1"
            android:inputType="date"
            android:focusable="false"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginTopBase"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="@color/icons"
            android:text="@string/Genero"
            android:textSize="@dimen/letraBase"
            android:layout_height="wrap_content"></TextView>
        <Spinner
            android:id="@+id/spinnerGenero"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginTopBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/icons"
            android:text="@string/Entrada"
            android:textSize="@dimen/letraBase"></TextView>

        <EditText
            android:id="@+id/valorEntradaTxt"
            android:hint="@string/HintValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorMorado"
            android:inputType="number"
            android:layout_weight="1"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/marginTopBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="@string/Calificacion"
            android:textColor="@color/icons"
            android:textSize="@dimen/letraBase"
            android:layout_height="wrap_content">
        </TextView>
        <Spinner
            android:id="@+id/spinnerCalificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></Spinner>

    </LinearLayout>


        <Button
            android:id="@+id/registrarBtn"
            android:layout_marginTop="@dimen/marginTopBase"
            android:textAllCaps="false"
            android:textSize="@dimen/letraBase"
            android:background="@color/colorAccent"
            android:text="@string/registrar"
            android:textColor="@color/primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>


    <ListView
        android:id="@+id/conciertosLv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>



</LinearLayout>